<%= search_form_for @search ,:url=>search_admin_tasks_path do |f| %>
        <%= f.label :task_status_id_eq, "Status" %>
        <%= f.select :task_status_id_eq, options_from_collection_for_select(TaskStatus.all.order(:name), :id, :name) %>
	<%= f.submit 'Search' %>
<% end %>

<div class="container">
    <div class="row">
        <div class="col-md-12">

            <div class="alert alert-success" style="display:none;">
                <span class="glyphicon glyphicon-ok"></span> Drag table row and cange Order</div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Task Name
                        </th>
                        <th>
                           	Assigned To
                        </th>
                    </tr>
                </thead>
                <tbody>
                	<% @tasks.each do |task| %>
                    <tr>
                        <td>
                            <%= task.name %>
                        </td>
                        <td>
                            <%= task.user.first_name %>
                        </td>
                    </tr> 
                    <% end %>            
                </tbody>
            </table>
        </div>
    </div>
</div>
