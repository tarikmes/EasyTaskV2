<%= form_tag(resource_report_admin_tasks_path, :method => "get") do %>
  <%= label_tag 'name', 'Date From:' %>
  <%= text_field_tag :date_from, params[:date_from], class: 'datepicker'  %>
  <%= label_tag 'name', 'Date To:' %>
  <%= text_field_tag :date_to, params[:date_to], class: 'datepicker' %>
  <%= submit_tag "Search", :name => nil %>
<% end %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-success" style="display:none;">
                <span class="glyphicon glyphicon-ok"></span> Drag table row and cange Order</div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Task Name
                        </th>
                        <th>
                            Resource Name
                        </th>
                        <th>
                            Used Resources
                        </th>
                    </tr>
                </thead>
                <tbody>
                  <% @used_resources.each do |resource| %>
                    <tr>
                        <td>
                            <%= resource.task.name %>
                        </td>
                        <td>
                            <%= resource.resource.name %>
                        </td>
                        <td>
                           <%= resource.used %> 
                        </td>
                    </tr> 
                    <% end %>            
                </tbody>
            </table>
        </div>
    </div>
</div>