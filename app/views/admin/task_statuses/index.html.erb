<h1>Task statuses index</h1>
<%= link_to 'New',  new_admin_task_status_path  %>
<table>
	<th>Name</th>
	<th>Action</th>
	<% @statuses.each do |status|%>
	<tr>
		<td><%= status.name %></td>
		<td><%= link_to 'Show' %></td>
		<td><%= link_to 'Edit',  edit_admin_task_status_path(status) %></td>
		<td><%= link_to 'Delete', admin_task_status_path(status), 
      	method: :delete,
      	data: {confirm: "Are You sure?"} %></td>
	</tr>
	<% end %>